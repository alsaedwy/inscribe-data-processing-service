# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "eu-west-1"
environment = "dev"

# EC2 Configuration - FREE TIER SETTINGS
instance_type = "t3.micro"  # Free tier: 750 hours/month of t3.micro

# Access Configuration
enable_ssm_access = true # Enable AWS Systems Manager Session Manager access

# Database Configuration - FREE TIER SETTINGS  
db_instance_class = "db.t3.micro"  # Free tier: 750 hours/month of db.t3.micro
db_allocated_storage = 20  # Free tier: 20GB General Purpose SSD
db_name = "inscribe_db"
db_username = "admin"
db_password = "your-secure-password-here"  # Change this!

# Network Configuration (optional - will create VPC if not specified)
# vpc_id = ""
# subnet_ids = ["subnet-xxxxx", "subnet-yyyyy"]

# Free Tier Notes:
# - EC2: 750 hours/month of t3.micro instances
# - RDS: 750 hours/month of db.t3.micro + 20GB storage
# - VPC: 1 VPC per region (included)
# - EIP: 1 EIP when attached to running instance (included)
# - Security Groups: 500 per VPC (included)
# - IAM: Roles and policies (always free)
# - SSM: Session Manager usage (free for EC2 instances)
